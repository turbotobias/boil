{
	"name": "@boil/sync-web-demo",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite --host",
		"dev:proxy": "bun run ../../scripts/kill-ports.ts 5173 8787 && pnpm dev:vite & pnpm dev:wrangler",
		"dev:wrangler": "wrangler pages dev --proxy 5173 --port 8787",
		"build": "vite build",
		"deploy": "pnpm build && wrangler pages deploy ./dist",
		"test": "bun test --bail=1 --watch --coverage",
		"lint:fix": "biome check --fix .",
		"lint:fix-force": "biome check --write .",
		"clean": "bun run ./scripts/reinstall.ts",
		"reinstall": "bun run clean && pnpm install"
	},
	"dependencies": {
		"@boil/utils": "workspace:*",
		"@boil/sync-zero": "workspace:*",
		"@hono/node-server": "^1.13.7",
		"@rocicorp/zero": "^0.12.2025013000",
		"hono": "^4.6.19",
		"jose": "^5.9.6",
		"js-cookie": "^3.0.5",
		"nanoid": "^5.0.9",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@boil/config-typescript": "workspace:*",
		"@boil/sync-server": "workspace:*",
		"@cloudflare/workers-types": "^4.20250129.0",
		"@types/bun": "^1.2.1",
		"@types/js-cookie": "^3.0.6",
		"@types/node": "^22.12.0",
		"@types/react": "^19.0.8",
		"@types/react-dom": "^19.0.3",
		"@types/semver": "^7.5.8",
		"@vitejs/plugin-react": "^4.3.4",
		"dotenv": "^16.4.7",
		"npm-check-updates": "^17.1.14",
		"supabase": "^2.9.6",
		"trash": "^9.0.0",
		"typescript": "^5.7.3",
		"vite": "6.0.11",
		"wrangler": "^3.106.0"
	}
}
